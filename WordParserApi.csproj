<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="9.0.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="7.3.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\WordParserLibrary\WordParserLibrary.csproj" />
  </ItemGroup>


  <Target Name="GitVersion" BeforeTargets="BeforeBuild">
    <Exec Command="dotnet gitversion /output buildserver" ConsoleToMsBuild="true" />
  </Target>

  <Target Name="SetVersion" AfterTargets="GitVersion">
      <PropertyGroup>
        <Version>$(GitVersion_FullSemVer)</Version>
        <AssemblyVersion>$(GitVersion_AssemblySemVer)</AssemblyVersion>
        <FileVersion>$(GitVersion_AssemblySemFileVer)</FileVersion>
        <InformationalVersion>$(GitVersion_InformationalVersion)</InformationalVersion>
        <NuGetVersion>$(GitVersion_NuGetVersion)</NuGetVersion>
      </PropertyGroup>
  </Target>

</Project>
